<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>datalife.ds</groupId>
	<artifactId>mydata</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.test.skip>false</maven.test.skip>
		
		<maven.compiler.source>20</maven.compiler.source>
		<maven.compiler.target>20</maven.compiler.target>
		<datalife-ds-version>1.0-SNAPSHOT</datalife-ds-version>
		<junit-jupiter-version>5.9.3</junit-jupiter-version>
		<weld-junit5-version>4.0.0.Final</weld-junit5-version>
		
		<weld-se-core-version>5.1.1.Final</weld-se-core-version>
		<jakarta-cdi-api-version>4.0.1</jakarta-cdi-api-version>
		<jakarta.validation-api-version>3.0.2</jakarta.validation-api-version>
		<weld-junit5-version>4.0.0.Final</weld-junit5-version>
		
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-controls</artifactId>
			<version>20</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-fxml</artifactId>
			<version>20</version>
		</dependency>
		<dependency>
			<groupId>org.openjfx</groupId>
			<artifactId>javafx-swing</artifactId>
			<version>20</version>
		</dependency>
		<dependency>
			<groupId>eu.lestard</groupId>
			<artifactId>assertj-javafx</artifactId>
			<version>0.3.0</version>
		</dependency>
		<dependency>
			<groupId>com.querydsl</groupId>
			<artifactId>querydsl-sql</artifactId>
			<version>5.0.0</version>
		</dependency>
		<dependency>
			<groupId>eu.lestard</groupId>
			<artifactId>advanced-bindings</artifactId>
			<version>0.4.0</version>
		</dependency>
		<dependency>
			<groupId>eu.lestard</groupId>
			<artifactId>doc-annotations</artifactId>
			<version>0.2</version>
		</dependency>
		<dependency>
			<groupId>net.jodah</groupId>
			<artifactId>typetools</artifactId>
			<version>0.6.1</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.7.12</version>
		</dependency>
		<dependency>
			<groupId>org.assertj</groupId>
			<artifactId>assertj-core</artifactId>
			<version>1.7.1</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>com.cedarsoft.commons</groupId>
			<artifactId>test-utils</artifactId>
			<version>6.1.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.controlsfx</groupId>
			<artifactId>controlsfx</artifactId>
			<version>8.40.12</version>
			<scope>provided</scope>
		</dependency>
		
		<!-- DS lib -->
		<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ds-common</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
		<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ds-data-core</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ds-ui</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>	
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ds-sqlite</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ds-condition</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ehr-code</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ehr-querydsl</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ehr-dao</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ehr-meta-dao</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ehr-meta</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ehr-function</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
		<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ehr-research</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			<!--
			<dependency>
				<groupId>datalife.ds</groupId>
				<artifactId>ehr-emrdoc</artifactId>
				<version>${datalife-ds-version}</version>
			</dependency>
			-->

			<!-- CDI  -->
			<dependency>
				<groupId>org.jboss.weld.se</groupId>
				<artifactId>weld-se-core</artifactId>
				<version>${weld-se-core-version}</version>
			</dependency>
			<dependency>
				<groupId>jakarta.enterprise</groupId>
				<artifactId>jakarta.enterprise.cdi-api</artifactId>
				<version>${jakarta-cdi-api-version}</version>
			</dependency>
			<dependency>
				<groupId>jakarta.validation</groupId>
				<artifactId>jakarta.validation-api</artifactId>
				<version>${jakarta.validation-api-version}</version>
			</dependency>
		
		<dependency>
		    <groupId>commons-io</groupId>
		    <artifactId>commons-io</artifactId>
		    <version>2.13.0</version>
		</dependency>
		
		<!-- Testing Frameworks -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.12</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-api</artifactId>
			<version>${junit-jupiter-version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.junit.jupiter</groupId>
			<artifactId>junit-jupiter-engine</artifactId>
			<version>${junit-jupiter-version}</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.weld</groupId>
			<artifactId>weld-junit5</artifactId>
			<version>${weld-junit5-version}</version>
			<scope>test</scope>
		</dependency>
		
		<dependency>
			<groupId>org.mockito</groupId>
			<artifactId>mockito-all</artifactId>
			<version>1.10.19</version>
			<scope>test</scope>
		</dependency>
		
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<release>20</release>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>3.0.0</version>
				<configuration>
					<argLine>
						--module-path D:\DEV\my-data\javafx-sdk-20.0.1\lib
						--add-modules javafx.controls,javafx.fxml
						--add-opens java.base/java.lang=ALL-UNNAMED
					</argLine>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.openjfx</groupId>
				<artifactId>javafx-maven-plugin</artifactId>
				<version>0.0.8</version>
				<executions>
					<execution>
						<!-- Default configuration for running -->
						<!-- Usage: mvn clean javafx:run -->
						<id>default-cli</id>
						<configuration>
							<mainClass>datalife.ds.mydata.App</mainClass>
						</configuration>
					</execution>
					<execution>
						<!-- Configuration for manual attach debugging -->
						<!-- Usage: mvn clean javafx:run@debug -->
						<id>debug</id>
						<configuration>
							<options>
								<option>
									-agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=localhost:8000</option>
							</options>
							<mainClass>datalife.ds.mydata.App</mainClass>
						</configuration>
					</execution>
					<execution>
						<!-- Configuration for automatic IDE debugging -->
						<id>ide-debug</id>
						<configuration>
							<options>
								<option>
									-agentlib:jdwp=transport=dt_socket,server=n,address=${jpda.address}</option>
							</options>
							<mainClass>datalife.ds.mydata.App</mainClass>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
